<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dlk.dlk">

    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="false"></uses-feature>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_flareicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_flareicon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.dlk.dlk.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dlk.dlk.MainActivity"></activity>
        <activity android:name="com.dlk.dlk.NFC_Write.NFCWritePassword"></activity>
        <activity android:name="com.dlk.dlk.NFC_Write.NFCWriteSetting"></activity>
        <activity android:name="com.dlk.dlk.NFC_Write.ChoiceActivity"></activity>
        <activity android:name="com.dlk.dlk.PasswordActivity"></activity>
    </application>

</manifest>
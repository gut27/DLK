<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FLARE"
            android:textColor="#585858"
            android:textSize="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="내부자 정보 유출을 방지하기 위해 보안 어플이 실행 중입니다."
            android:textColor="#585858"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#959595"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:text="App이 활성화 상태가 되어야 하는 상황임에도 불구하고 App을 삭제하여 활성화 시켜 놓지 않은 경우 발생하는 정보 유출 사건과 관련된 불이익은 책임지지 않습니다." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/agree"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/image_agree"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/notagree"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/image_btn_notagr"
            android:textAlignment="center"
            android:textColor="#000000"

            android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>